@{
  Layout = "master.cshtml";
  ViewBag.Title = "Blog Archive";
}

<h1>Archive</h1>

<section>
  @foreach (var yearGroup in Model)
  {
    <h2>@yearGroup.Key</h2>
    foreach (var monthGroup in yearGroup.Value)
    {
      <p>
        @foreach (var post in monthGroup.Value)
        {
          <div>@post.Created.ToString("dd-MM-yyyy")&nbsp;&nbsp;&nbsp;<a href="@post.PermaLink">@post.Title</a></div>
        }
      </p>
    }
  }
</section>